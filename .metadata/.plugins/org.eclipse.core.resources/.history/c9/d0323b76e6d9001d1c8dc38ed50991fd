package com.shopcart.backend.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.shopcart.backend.model.Cart;
import com.shopcart.backend.model.CartItem;
import com.shopcart.backend.repository.CartItemRepository;
import com.shopcart.backend.repository.CartRepository;

@Service
public class CartService {

	@Autowired
	private CartRepository  cartRepository;
	
	@Autowired
	private CartItemRepository cartItemRepository;
	
	public Cart addToCart(Long userId, CartItem cartitem) {
		
		Cart cart = new Cart(userId);
		cartRepository.save(cart);
		CartItem cartitemexist = new CartItem(cartitem.getProducts(),cartitem.getQuantity(),cart);
		return cartItemRepository.save(cartitemexist);
	}
}
